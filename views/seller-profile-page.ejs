<% layout('../../views/layout') -%>

<h2>My Profile</h2>

<form method="get" action="/seller/<%=seller._id%>/remove">
    <fieldset id="dealership" style="display: <%=dealerDisplay%>">
		<p><i class="icon-briefcase"></i>&nbsp;<strong><%=seller.dealershipName%></strong></p>
		<div class="row">
			<div class="span4">
				<p><i class="icon-road"></i>&nbsp;<%=seller.address.street%></p>
				<p><i class="icon-road"></i>&nbsp;<%=seller.address.suburb%></p>
				<p><i class="icon-map-marker"></i>&nbsp;<%=seller.address.town%></p>
				<p><i class="icon-map-marker"></i>&nbsp;<%=seller.address.province%></p>
			</div>
			<div class="span4">
				<div class="span6">
					<p><i class="icon-user"></i>&nbsp;
						<%=seller.contactPerson.firstname%>&nbsp;<%=seller.contactPerson.surname%></p>
					<p><i class="icon-envelope"></i>&nbsp; <%=user.emailAddress%></p>
				<% for (var i = 0; i < seller.contactNumbers.length; i++) { %>
					<p><i class="icon-home"></i>&nbsp; <%=seller.contactNumbers[i]%></p>
				<% } %>
			</div>
				</div>

			</div>
		</div>
    </fieldset>
    <fieldset id="privateSeller" style="display: <%=privateSellerDisplay%>">
		<div class="row">
			<div class="span4">
				<p><i class="icon-user"></i>&nbsp;
					<%=seller.contactPerson.firstname%>&nbsp;<%=seller.contactPerson.surname%></p>
				<p><i class="icon-envelope"></i>&nbsp;<%=user.emailAddress%></p>
				<p><i class="icon-map-marker"></i>&nbsp;<%=seller.address.town%></p>
				<p><i class="icon-map-marker"></i>&nbsp;<%=seller.address.province%></p>
			</div>
			<div class="span4">
			<% for (var i = 0; i < seller.contactNumbers.length; i++) { %>
				<p><i class="icon-home"></i>&nbsp; <%=seller.contactNumbers[i]%></p>
			<% } %>
			</div>
		</div>
    </fieldset>
    <div class="form-actions">
		<a href="/seller/edit" class="btn">Edit</a>
		<button class="btn btn-link">Delete</button>
		<a href="/vehicle/add" class="btn btn-primary pull-right">Advertise a Vehicle</a>
    </div>
</form>
