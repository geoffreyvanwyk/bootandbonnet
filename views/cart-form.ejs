<% layout('../views/layout') -%>
<% script('../../static/js/cart-form.js') -%>

<div class="page-header">
	<h1>Cart</h1>
</div>

<form id="items" action="/orders/add" method="post">
	<table class="table">
		<thead>
			<th>Item</th>
			<th>Weeks</th>
			<th>Cost</th>
		</thead>
		<tbody>
		<% for (var i = 0; i < items.length; i++) { var item = JSON.parse(items[i]); %>
			<input	type="hidden" name="item<%=i%>[_id]" value="<%=item._id%>" >
			<input	type="hidden" name="item<%=i%>[cost]" value="" class="bootandbonnet-cost"
					data-custom="<%=item._id%>"	>
			<tr>
				<td><%=item.type.make%>&nbsp;<%=item.type.model%>&nbsp;<%=item.type.year%></td>
				<td>
					<select	name="item<%=i%>[weeks]" class="bootandbonnet-weeks span1" data-custom="<%=item._id%>"	>
						<option>1</option>
						<option>2</option>
						<option>3</option>
						<option>4</option>
						<option>5</option>
						<option>6</option>
					</select>
				</td>
				<td	class="bootandbonnet-cost" data-custom="<%=item._id%>"	></td>
			</tr>
		<% } %>
			<tr>
				<th colspan="2" >Total</th>
				<th id="total"></th>
			</tr>
		</tbody>
	</table>

	<button type="submit" class="btn btn-success">Checkout</button>
</form>
