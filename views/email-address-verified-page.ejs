<% layout('../views/layout') -%>

<div style="display: <%= verificationErrors.keyError === '' && verificationErrors.userError === '' ? '' : 'none' %>">
	<h2>Thank you!</h2>
	<p>Your email address has been verfied.</p>
</div>

<div style="display: <%= verificationErrors.keyError ? '' : 'none'%>">
	<h2>Error</h2>
	<p><%=verificationErrors.keyError%></p>
</div>

<div style="display: <%= verificationErrors.userError ? '' : 'none' %>">
	<h2>Error</h2>
	<p><%=verificationErrors.userError%></p>
</div>