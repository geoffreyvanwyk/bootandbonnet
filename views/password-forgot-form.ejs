<% layout('../views/layout') -%>

<div class="page-header">
	<h1>Forgotten Password</h1>
</div>

<form method="post" action="/password/forgot">
	<fieldset>
		<div class="alert alert-info" >
			Please enter the email address with which you registered your account. A message will be sent to that
			address, with instructions for resetting your password.
		</div>

		<div class="form-group <%=error.emailAlertType%>">
			<label for="email" class="control-label">Email</label>
			<input type="email" required
				name="user[emailAddress]" value="<%=error.emailAddress%>"
				id="email" class="form-control"
			>
			<span class="help-block"><%=error.message%></span>
		</div>

		<button type="submit" class="btn btn-primary">Request Password Reset</button>
	</fieldset>
</form>