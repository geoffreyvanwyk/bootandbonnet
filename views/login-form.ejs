<% layout('../views/layout') -%>

<form method="post" action="/login">
    <fieldset>
        <legend>Log In</legend>
		<div class="alert alert-success" style="display: <%=resetDisplay%>;">
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			Your password has been reset successfully. You may now log in with your new password.
		</div>
		<div class="row">
			<div class="span12">
				<div class="control-group <%=loginErrors.emailAlertType%>">
					<label class="control-label">Email</label>
					<div class="controls">
						<input type="email" name="user[emailAddress]" value="<%=loginErrors.emailAddress%>"
							   required="required"/>
						<span class="help-block" ><%=loginErrors.emailError%></span>
					</div>
				</div>

				<div class="control-group <%=loginErrors.passwordAlertType%>">
					 <label class="control-label">Password</label>
					<div class="controls">
						<input type="password" name="user[password]" value="<%=loginErrors.password%>"
							   required="required"/>
						<span class="help-block" ><%=loginErrors.passwordError %></span>
					</div>
				</div>

				<div class="controls">
					<button type="submit" class="btn btn-primary" >Log in</button>
					<a href="/password/forgot">Forgot password?</a>
				</div>
			</div>
		</div>
    </fieldset>
</form>
