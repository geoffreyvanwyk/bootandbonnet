<% layout('../views/layout') -%>

<div class="page-header">
	<h1>Log In</h1>
</div>

<form method="post" action="/users/login" role="form">
    <fieldset>
		<div class="alert alert-success" style="display: <%=resetDisplay%>;">
			<strong>Your password has been reset successfully!</strong> You may now log in with your new password.
		</div>
		<div class="row">
			<div class="col-md-3">
				<div class="form-group <%=loginErrors.emailAlertType%>">
					<label for="email" class="control-label">Email</label>
					<input type="email" name="user[emailAddress]" value="<%=loginErrors.emailAddress%>"
						id="email" class="form-control" required>
					<p class="help-block" ><%=loginErrors.emailError%></p>
				</div>

				<div class="form-group <%=loginErrors.passwordAlertType%>">
					<label for="password" class="control-label">Password</label>
					<input type="password" name="user[password]" value="<%=loginErrors.password%>"
						id="password" class="form-control" required>
					<p class="help-block" ><%=loginErrors.passwordError %></p>
				</div>

				<button type="submit" class="btn btn-primary" >Log in</button>
				<a href="/password/forgot">Forgot password?</a>
			</div>
		</div>
    </fieldset>
</form>
